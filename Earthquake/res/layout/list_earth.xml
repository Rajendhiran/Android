<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:background="#87CEFF" >
    
    <RelativeLayout
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
    	
    	<TextView
    		android:id="@+id/eqname" 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Earthquake Name: "    		
    		android:layout_marginTop="10dip"
    		android:layout_marginLeft="10dip"
    		android:textColor="#000000"
    		android:layout_marginBottom="10dip"
    		android:textSize="18dip" />

    	<TextView 
    		android:id="@+id/eqnamevalue"
    		android:layout_toRightOf="@+id/eqname"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="XXXX"
    		android:layout_marginTop="13dip"
    		android:textColor="#FF8247"
    		android:layout_marginLeft="10dip"
    		android:layout_marginBottom="10dip"
    		android:textSize="18dip" />
    		
    	<TextView
    		android:id="@+id/rictar"
    		android:textColor="#000000"    		
    		android:layout_below="@+id/eqname" 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Rictar Scale: "
    		android:layout_marginLeft="10dip"
    		android:textSize="16dip" />

    	<TextView 
    		android:id="@+id/rictarvalue"
    		android:layout_toRightOf="@+id/rictar"
    		android:layout_below="@+id/eqnamevalue"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dip"    		
    		android:text="XXXX"
    		android:textColor="#FF8247"
    		android:textSize="16dip" />
    	
    </RelativeLayout>
</LinearLayout>
