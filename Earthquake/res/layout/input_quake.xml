<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#7D9EC0">
    
 <RelativeLayout 
   android:id="@+id/Header"
   android:layout_width="fill_parent"
   android:layout_height="60dip"
   android:background="#3B6AA0">
   
   <TextView 
   		android:id="@+id/Title"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:textColor="#FFFAFA"
   		android:text="@string/Edetails"
   		android:textSize="20dip"
   		android:gravity="center"
   		android:layout_centerVertical="true"
   		android:layout_marginLeft="5dip" >
   	
   </TextView>
 </RelativeLayout>
 
<RelativeLayout 
	android:id="@+id/InputData"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:focusableInTouchMode="true"
	android:layout_marginTop="30dip"
	android:gravity="center_horizontal">

  <LinearLayout
  	android:id="@+id/Northlay" 
  	android:orientation="horizontal"
  	android:layout_margin="10dip"
  	android:layout_width="wrap_content"	
  	android:layout_height="wrap_content">
  	
	<TextView
		android:id="@+id/NorthText" 
		android:layout_width="wrap_content"
		android:textSize="20dip"
		android:layout_height="wrap_content"		
		android:text="North" />
		
	<EditText
		android:layout_toRightOf="@+id/NorthText"
		android:numeric="signed|decimal"	
		android:id="@+id/NorthEdit"		
		android:layout_width="100dip"		
		android:layout_height="wrap_content"  />
		
  </LinearLayout>

  <LinearLayout
  	android:id="@+id/Southlay"
  	android:orientation="horizontal"
  	android:layout_below="@+id/Northlay"
  	android:layout_margin="10dip" 
  	android:layout_width="wrap_content"	
  	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/SouthText"
		android:textSize="20dip"		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="South" />
		
	<EditText
		android:id="@+id/SouthEdit"
		android:numeric="signed|decimal"	
		android:layout_width="100dip"				
		android:layout_height="wrap_content" />
	
  </LinearLayout>

  <LinearLayout
  	android:id="@+id/Eastlay"
  	android:orientation="horizontal"
  	android:layout_margin="10dip"
  	android:layout_below="@+id/Southlay" 
  	android:layout_width="wrap_content"	
  	android:layout_height="wrap_content">
  
	<TextView
		android:id="@+id/EastText"
		android:textSize="20dip"		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="East" />
		
	<EditText
		android:id="@+id/EastEdit"
		android:inputType="numberSigned|numberDecimal"
		android:layout_width="100dip"
		android:layout_marginLeft="15dip"		
		android:layout_height="wrap_content" />
   </LinearLayout>

  <LinearLayout
  	android:id="@+id/Westlay"
  	android:orientation="horizontal"
  	android:gravity="center_horizontal"
  	android:layout_below="@+id/Eastlay"
  	android:layout_margin="10dip" 
  	android:layout_width="wrap_content"	
  	android:layout_height="wrap_content">
   	
	<TextView
		android:id="@+id/WestText"
		android:textSize="20dip"		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="West" />
		
	<EditText
		android:id="@+id/WestEdit"
		android:layout_width="100dip"	
		android:numeric="signed|decimal"	
		android:layout_marginLeft="10dip"			
		android:layout_height="wrap_content" />		
	</LinearLayout>
</RelativeLayout>

 <LinearLayout
  	android:id="@+id/Buttonlay"
  	android:orientation="horizontal"
  	android:layout_gravity="center_horizontal"
  	android:layout_margin="10dip" 
  	android:layout_width="wrap_content"	
  	android:layout_height="wrap_content">

  	<Button 
  		android:id="@+id/Submit"
  		android:text="Submit"
  		android:textSize="20dip"
  		android:layout_margin="10dip"
  		android:layout_width="100dip"
  		android:layout_height="50dip"
  		android:background="#6183A6" />
  		
  	<Button 
  		android:id="@+id/Clear"
  		android:text="Clear"
  		android:textSize="20dip"
  		android:layout_margin="10dip"
  		android:layout_width="100dip"
  		android:layout_height="50dip"
  		android:background="#6183A6" />
  </LinearLayout>  		
    
  <TextView 
  	android:id="@+id/goog"
  	android:layout_width="wrap_content"
  	android:textSize="40dip"
  	android:layout_marginLeft="10dip"
  	android:layout_height="wrap_content"
  	android:text="Google"
  	android:clickable="true" />
  			
 </LinearLayout>
