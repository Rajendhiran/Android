<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="#7D9EC0">
 	   
 <RelativeLayout    
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">

	<RelativeLayout 
		android:id="@+id/Header"
    	android:layout_width="fill_parent"
    	android:layout_alignParentTop="true"    	
    	android:layout_height="45dip"
		android:background="#3B6AA0">
   
   <TextView 
   		android:id="@+id/Title"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:textColor="#FFFAFA"
   		android:text="Detail View"
   		android:textSize="18dip"
   		android:gravity="center"
   		android:layout_centerVertical="true"
   		android:layout_marginLeft="5dip" >   	
   </TextView>
   
   <RelativeLayout 
   	android:layout_width="wrap_content"
   	android:layout_height="wrap_content"
   	android:layout_alignParentRight="true">
   	
    <Button 
    	android:id="@+id/detailhome"
		android:layout_margin="7dip"
  		android:layout_width="60dip"
  		android:layout_height="30dip"
    	android:text="Home"
    	android:background="#8DB6CD" />
    	
  	<Button 
    	android:id="@+id/contentButton"
    	android:layout_toRightOf="@+id/detailhome"
    	android:layout_margin="7dip"    	    	    	
  		android:layout_width="60dip"
  		android:layout_height="30dip"
    	android:text="Content"
    	android:background="#8DB6CD" />

    <Button 
    	android:id="@+id/mapButton"
    	android:layout_toRightOf="@+id/contentButton"
    	android:layout_margin="7dip"    	
  		android:layout_width="60dip"
  		android:layout_height="30dip"
    	android:text="Map"
    	android:background="#8DB6CD"
    	android:clickable="true"
    	android:onClick="ShowMap" />    	
    </RelativeLayout>
   </RelativeLayout>       	 
	<LinearLayout 
		android:id="@+id/viewcontent"		
		android:layout_below="@+id/Header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal" />
  </RelativeLayout> 	  
 </LinearLayout>
